<Window x:Class="WpfTouchFrameSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized"
        FontFamily ="./Fonts/#Press Start 2P"
        KeyDown="OnKeyDown">

    <Grid x:Name="grid" TouchMove="OnTouchMove" TouchDown="OnTouchDown" TouchUp="OnTouchUp" Width="59.77265033600158cm" Height="33.6221158140009cm" Background="Black">
        <Canvas x:Name="canvas" Background="Transparent" Panel.ZIndex="1000" />
        <StackPanel Orientation="Vertical" Margin="20">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="xaml_touchcode_label" Foreground="White" FontSize="30" Background="Transparent"  BorderThickness="0">>>Touchcode:</TextBox>
                <TextBox x:Name="xaml_touchcode_value" Foreground="White" FontSize="30" Width="1920" Background="Transparent" BorderThickness="0">[None]</TextBox>
            </StackPanel>
            <TextBox x:Name="xaml_touchpoints" Foreground="White" FontSize="10" Background="Transparent" BorderThickness="0" Height="20" Margin="0,25,0,0" />
        </StackPanel>
        <TextBox x:Name="xaml_word" Foreground="White" FontSize="50" Background="Transparent" BorderThickness="0" Margin="880,450,0,0"></TextBox>
    </Grid>
</Window>